<div class="container">

<h1><%= @task.title %></h1>
<p class= 'link-color'><%= @task.details %></p>

<% if @task.completed == false %>
  <p>This task isn't completed yet!</p>
<% else %>
  <p>This task is complete!</p>
<% end %>

<%= link_to 'Back to Tasks', tasks_path %>
<%= link_to 'Delete',
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}
%>
<%= link_to 'Edit', edit_task_path %>
</div>
